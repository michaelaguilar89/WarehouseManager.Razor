@page
@model WareHouseManager.Razor.Pages.RolesPages.AsignarRolModel
@{
}
<div class="row">
    <div class="col-md-6 mx-auto 0">
 
          <h2 class="text-center text-success">Assign Role to User</h2>
          @if(Model.Messages!=null){
              <h3 class="text-danger text-center">
                  @Model.Messages
              </h3>
          }
        @if (Model.MessagesOk != null)
        {
            <h3 class="text-success text-center">
                @Model.MessagesOk
            </h3>
        }
        <form method="post">
                <div class="form-group">
                    <label asp-for="UserId">Select User</label>
                    <select asp-for="UserId" class="form-control" asp-items="Model.Users"></select>
                </div>
                <div class="form-group">
                     <label asp-for="RoleName">Select Role</label>
                     <select asp-for="RoleName" class="form-control" asp-items="Model.Roles"></select>
                </div>
            <div class="form-group text-center pt-3">
                <a href="javascript:history.back()" class="btn btn-success my-5">Go Back</a>
                <button type="submit" class="btn btn-primary">Assign Role</button>
            </div>
               
</form>

    </div>
</div>